---
import { SITE_DESCRIPTION } from "../consts";
import BaseHead from "./BaseHead.astro";
import Footer from "./Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
